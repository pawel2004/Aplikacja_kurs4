<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grybos.aplikacjakurs4">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ikona"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ikona"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.PhotoActivity" />
        <activity android:name=".Activities.FileActivity" />
        <activity
            android:name=".Activities.CameraActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.NetworkActivity" />
        <activity android:name=".Activities.CollageActivity" />
        <activity android:name=".Activities.AlbumsActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.NoteActivity" />
        <activity android:name=".Activities.ChooseCollageActivity"></activity>
    </application>

</manifest>