<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grybos.aplikacjakurs4">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ikona"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ikona"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.PhotoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.FileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CameraActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.NetworkActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.CollageActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.AlbumsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.NoteActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.ChooseCollageActivity"
            android:screenOrientation="portrait" ></activity>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>

</manifest>